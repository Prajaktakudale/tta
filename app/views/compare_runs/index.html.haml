= javascript_include_tag 'compare_runs_form'
.page_title
  %h1 Compare Runs
= form_tag({:action => 'getCompareJson'}, :id => "compare_runs_form") do
  #compare_runs_model
    %table{:border => "1", :style => "text-align: left; width: 100%;"}
      %tbody
        %tr
          %td.fields-left{:style => "padding-bottom: 10px"}
            %label{:for => "project"} Project
          %td
            = select_tag 'project_id',  options_from_collection_for_select(Project.get_all_projects,'id','name'), :prompt => "---SELECT PROJECT-----", :id => 'project_select', :class => 'required'
        %tr
          %td#div_subproject.fields-left{:disabled => "disabled", :style => "padding-bottom: 10px"}
            %label{:for => "sub-project"} Sub Projects
          %td
            = select_tag 'sub_projects', "", :prompt => "---SELECT SUB PROJECT-----", :id => 'sub_project_select', :class => 'required', :disabled => true
        %tr
          %td#div_test_category.fields-left{:style => "padding-bottom: 10px"}
            %label{:for => "Test-Category"} Test Category
          %td
            = select_tag 'test_category', "", :prompt => "---SELECT TEST CATEGORY-----", :id => 'test_category_select', :class => 'required', :disabled => true
        %tr
          %td.fields-left{:style => "padding-bottom: 10px"}
            %label{:for => "date1"} Date 1
          %td
            = select_tag "date_one", "", :prompt => "----SELECT DATE----", :id => 'date_one_select', :class => 'required', :disabled => true
        %tr
          %td.fields-left{:style => "padding-bottom: 10px"}
            %label{:for => "date2"} Date 2
          %td
            = select_tag "date_two", "", :prompt => "----SELECT DATE----", :id => 'date_two_select', :class => 'required', :disabled => true
        %tr
          %td
          %td#do-compare
            = submit_tag "Plot", {:id => "compare_runs"}
